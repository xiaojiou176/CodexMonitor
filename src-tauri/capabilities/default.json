{
  "$schema": "../gen/schemas/mobile-schema.json",
  "capabilities": [
    {
      "identifier": "desktop-default",
      "description": "Capability for desktop windows",
      "windows": [
        "main"
      ],
      "platforms": [
        "macOS",
        "windows",
        "linux"
      ],
      "permissions": [
        "core:default",
        "core:webview:allow-set-webview-zoom",
        "opener:default",
        "dialog:default",
        "process:default",
        "updater:default",
        "window-state:default",
        "liquid-glass:default",
        "notification:default",
        "core:window:allow-set-effects",
        "core:window:allow-start-dragging"
      ]
    },
    {
      "identifier": "desktop-about",
      "description": "Minimal capability for about window",
      "windows": [
        "about"
      ],
      "platforms": [
        "macOS",
        "windows",
        "linux"
      ],
      "permissions": [
        "core:default",
        "core:webview:allow-set-webview-zoom",
        "core:window:allow-start-dragging"
      ]
    },
    {
      "identifier": "mobile-default",
      "description": "Capability for mobile main window",
      "windows": [
        "main"
      ],
      "platforms": [
        "iOS",
        "android"
      ],
      "permissions": [
        "core:default",
        "core:webview:allow-set-webview-zoom",
        "opener:default",
        "dialog:default",
        "process:default",
        "notification:default"
      ]
    }
  ]
}
