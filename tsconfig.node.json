{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/features/app/*"],
      "@settings/*": ["src/features/settings/*"],
      "@threads/*": ["src/features/threads/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"]
}
